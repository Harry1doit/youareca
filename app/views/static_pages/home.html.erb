<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
       <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Happy Tweets</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1>You are ZOZO. You are Family.</h1>

  <p>
    <br>Welcome to the home page for
    <a href="/about">You are ZOZO</a>
    <br>Be unique.Be equal.<br>
  </p>

  <%= link_to "Be Family", signup_path, class: "btn btn-lg btn-primary" %>
</div>

<%= link_to image_tag("zozotown.jpg", alt: "zozo logo"), 'http://zozo.jp/' %>
<% end %>
